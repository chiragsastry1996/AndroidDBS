<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    tools:context=".Home.Home">

    <!--<ImageView-->
        <!--android:layout_width="25dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:src="@drawable/power"-->
        <!--android:rotation="270"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentLeft="true"/>-->

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/logo"
        android:layout_alignParentRight="true"/>


    <com.kaushikthedeveloper.squarelayout.SquareLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp"
            card_view:cardCornerRadius="30dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <LinearLayout
                            android:id="@+id/case_status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="12.5dp"
                            android:layout_marginTop="25dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/corner_radius"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/speech"
                                android:scaleX="0.9"
                                android:scaleY="0.9"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:text="Case Status"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/chat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="12.5dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="25dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/corner_radius"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/speech"
                                android:scaleX="0.9"
                                android:scaleY="0.9"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:text="Chat"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="0.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <LinearLayout
                            android:id="@+id/page_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="25dp"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="12.5dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/corner_radius"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/telephone"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:text="Phone"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/our_team"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginBottom="25dp"
                            android:layout_marginLeft="12.5dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/corner_radius"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView

                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/group"
                                android:scaleX="0.9"
                                android:scaleY="0.9"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:text="Our Team"
                                android:textAlignment="center"
                                android:textColor="@android:color/white"/>

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </com.kaushikthedeveloper.squarelayout.SquareLinearLayout>



</RelativeLayout>